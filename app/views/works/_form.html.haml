= form_for @work do |f|
  - if @work.errors.any?
    #error_explanation
      %h2= "#{pluralize(@work.errors.count, "error")} prohibited this work from being saved:"
      %ul
        - @work.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :index
    = f.text_field :index
  .field
    = f.label :choose_theme
    = f.text_field :choose_theme
  .field
    = f.label :display_theme
    = f.text_field :display_theme
  .actions
    = f.submit 'Save'
